---
const { title, icon, label } = Astro.props;
const svg = icon ? await import(`../icons/${icon}.svg?raw`) : undefined
---

<div class="feature grid grid-cols-3 grid-rows-[auto,_auto] gap-x-6 gap-y-4 w-full
	sm:grid-cols-5
	lg:grid-cols-3">
	{icon && <div class="text-neutral-400 row-span-2 row-start-1 col-start-1 mt-2">
	<Fragment set:html={ svg.default } />
	</div>}
	{label && <div class="text-8xl text-neutral-400 w-full text-left row-start-1 col-start-1 row-span-2">{ label }</div>}
	<h3 class="text-lg font-bold col-start-2 col-span-2 row-start-1
		sm:col-span-4
		lg:col-span-2">{ title }</h3>
	<div class="content col-start-2 row-start-2 col-span-2
		sm:col-span-4 sm:row-span-2
		lg:col-span-2"><slot /></div>

</div>
